<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageActivity">

    <TextView
        android:id="@+id/text_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="主页"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/line_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/line_title_bar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_50"
        app:layout_constraintBottom_toBottomOf="@+id/text_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/line_title_bar"
        app:layout_constraintBottom_toTopOf="@+id/line_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/bg_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="@+id/line_navigation_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/line_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_50"
        app:layout_constraintTop_toBottomOf="@+id/fragment_content"
        app:layout_constraintBottom_toTopOf="@+id/bg_home_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/bg_home_page"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@+id/bg_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@+id/bg_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bg_message_list"
        />

    <View
        android:id="@+id/bg_message_list"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toTopOf="@+id/bg_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@+id/bg_navigation_bar"
        app:layout_constraintStart_toEndOf="@+id/bg_home_page"
        app:layout_constraintEnd_toStartOf="@+id/bg_mine"
        />

    <View
        android:id="@+id/bg_mine"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@+id/bg_navigation_bar"
        app:layout_constraintBottom_toBottomOf="@+id/bg_navigation_bar"
        app:layout_constraintStart_toEndOf="@+id/bg_message_list"
        app:layout_constraintEnd_toEndOf="@+id/bg_navigation_bar"
        />

    <ImageView
        android:id="@+id/ic_home_page"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_home_page"
        android:alpha="0.8"
        app:layout_constraintTop_toTopOf="@+id/bg_home_page"
        app:layout_constraintStart_toStartOf="@+id/bg_home_page"
        app:layout_constraintEnd_toEndOf="@+id/bg_home_page"
        />

    <TextView
        android:id="@+id/text_home_page"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="主页"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/bg_home_page"
        app:layout_constraintStart_toStartOf="@+id/bg_home_page"
        app:layout_constraintEnd_toEndOf="@+id/bg_home_page"
        />

    <ImageView
        android:id="@+id/ic_message_list"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_message_list"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="@+id/bg_message_list"
        app:layout_constraintStart_toStartOf="@+id/bg_message_list"
        app:layout_constraintEnd_toEndOf="@+id/bg_message_list"
        />

    <TextView
        android:id="@+id/text_message_list"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="消息"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/bg_message_list"
        app:layout_constraintStart_toStartOf="@+id/bg_message_list"
        app:layout_constraintEnd_toEndOf="@+id/bg_message_list"
        />

    <ImageView
        android:id="@+id/ic_mine"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mine"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="@+id/bg_mine"
        app:layout_constraintStart_toStartOf="@+id/bg_mine"
        app:layout_constraintEnd_toEndOf="@+id/bg_mine"
        />

    <TextView
        android:id="@+id/text_mine"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="我的"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/bg_mine"
        app:layout_constraintStart_toStartOf="@+id/bg_mine"
        app:layout_constraintEnd_toEndOf="@+id/bg_mine"
        />

</androidx.constraintlayout.widget.ConstraintLayout>