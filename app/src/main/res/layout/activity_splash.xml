<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/ic_splash"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_splash"
        android:contentDescription="@string/todo"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_splash"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/firefly"
        android:textStyle="bold"
        android:textSize="30sp"
        android:alpha="0.0"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/ic_splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/title_statement_term"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/text_statement_term"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_01_r8dp_top"
        android:visibility="gone"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_statement_term"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_statement_term"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/white_10"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/title_statement_term"
        app:layout_constraintBottom_toTopOf="@+id/area_disagree"
        app:layout_constraintLeft_toLeftOf="@+id/title_statement_term"
        app:layout_constraintRight_toRightOf="@+id/title_statement_term"
        />

    <View
        android:id="@+id/area_disagree"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:background="@color/white_10"
        android:visibility="gone"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/text_statement_term"
        app:layout_constraintBottom_toTopOf="@+id/btn_agree"
        app:layout_constraintLeft_toLeftOf="@+id/title_statement_term"
        app:layout_constraintRight_toRightOf="@+id/title_statement_term"
        />

    <TextView
        android:id="@+id/btn_agree"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="同意并使用"
        android:textSize="16sp"
        android:visibility="gone"
        android:background="@drawable/bg_blue_r8dp_bottom"
        android:textColor="@color/white"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/area_disagree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/title_statement_term"
        app:layout_constraintRight_toRightOf="@+id/title_statement_term"
        />

    <TextView
        android:id="@+id/btn_disagree"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:text="不同意"
        android:textSize="14sp"
        android:textColor="@color/white_50"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/area_disagree"
        app:layout_constraintBottom_toBottomOf="@+id/area_disagree"
        app:layout_constraintLeft_toLeftOf="@+id/area_disagree"
        app:layout_constraintRight_toRightOf="@+id/area_disagree"
        />

</androidx.constraintlayout.widget.ConstraintLayout>